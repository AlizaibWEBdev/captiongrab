<script>

    // Function to display the error message
    function showError(message) {
        const errorDiv = document.getElementById("error-message");
        const errorText = document.getElementById("error-text");
    
        // Set the error message text
        errorText.textContent = message;
    
        // Make the error message visible
        errorDiv.classList.remove("hide");
        errorDiv.classList.add("show");
    }
    
    // Function to close the error message
    function closeError() {
        const errorDiv = document.getElementById("error-message");
    
        // Hide the error message smoothly
        errorDiv.classList.remove("show");
        setTimeout(() => {
            errorDiv.classList.add("hide");
        }, 300);
    }
    
    // Function to copy the captions text to the clipboard
    function copytext() {
        const text = document.getElementById("captions").innerText;
        window.navigator.clipboard.writeText(text).then(() => {
            alert("Text copied!");
        }).catch(err => {
            console.error("Error copying text: ", err);
        });
    }
    
    // Function to toggle the loader and captions visibility
    function toggleLoader() {
        document.getElementById("loader").classList.toggle("hide");
    }
    
    // Handle form submission
    document.getElementsByTagName("form")[0].addEventListener('submit', function (e) {
        e.preventDefault();  // Prevent default form submission
    
        const url = document.getElementById('youtube-url').value;
        const videoId = extractVideoId(url);
    
        if (videoId) {
            toggleLoader();
    
            // Send request to the server to fetch captions
            fetch("/get-subs", {
                method: "POST",  // specify method as POST
                headers: {
                    "Content-Type": "application/json",  // set content type to JSON
                },
                body: JSON.stringify({ videoId: videoId })  // send videoId as JSON
            })
            .then(res => res.json())  // Parse JSON response
            .then(subs => {
                if (subs[0] === "Please choose another video") {
                    // Try to fetch Hindi subtitles if English is not available
                    fetch("/get-subs-hindi", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify({ videoId: videoId })
                    })
                    .then(res => res.json())
                    .then(hindiSubs => {
                        if (hindiSubs[0] === "Please choose another video") {
                            showError("Please try with a different video.");
                        } else {
                            const hindiText = hindiSubs.map(caption => caption.text).join('<br>');
                            const paragraph = `<p>${hindiText}</p>`;
                            document.getElementById("captions").innerHTML = paragraph;
                            document.getElementById("captions").classList.remove("hide");
                        }
                        toggleLoader(); // Hide loader after handling both cases
                    })
                    .catch(err => {
                        console.log(err);
                        showError("Error fetching Hindi captions. Please try again.");
                        toggleLoader();
                    });
                } else {
                    const text = subs.map(caption => caption.text).join('<br>');
                    const paragraph = `<p>${text}</p>`;
                    document.getElementById("captions").innerHTML = paragraph;
                    document.getElementById("captions").classList.remove("hide");
                    toggleLoader(); // Hide loader after captions are fetched
                }
            })
            .catch(err => {
                console.log(err);
                showError("Error fetching captions. Please try again.");
                toggleLoader(); // Hide loader after error
            });
        } else {
            showError("Please enter a valid YouTube URL.");
        }
    });
    
    // Function to extract video ID from YouTube URL
    function extractVideoId(url) {
        const regex = /(?:youtube\.com\/(?:[^\/\n\s]+\/\S+\/|(?:v|e(?:mbed)?)\/|\S*?[?&]v=)|youtu\.be\/)([a-zA-Z0-9_-]{11})/;
        const match = url.match(regex);
        return match ? match[1] : null;
    }
    
